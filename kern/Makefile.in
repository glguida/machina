# Add libkutest
CFLAGS+=-I$(BUILDROOT)/tests/libkutest/kern -I$(SRCROOT)/tests/libkutest/kern
LDFLAGS+=-L$(BUILDROOT)/tests/libkutest/kern/$(OBJDIR)
LDADD+=-lku_kern
LIBDEPS+=$(BUILDROOT)/tests/libkutest/kern/$(OBJDIR)/libku_kern.a

SRCS+= main.c msgbuf.c physmem.c memcache.c memctrl.c task.c vashare.c vmmap.c vmobj.c thread.c sysc.c ipc.c ipcspace.c port.c kern_ipc.c sched.c timer.c vmreg.c cacheobj.c imap.c
